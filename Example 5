Example 5: To determine the integer is even/odd number or a multiple of 4 or/and a multiple of 5

#include <iostream>
using namespace std;

int main ()
{
    int num, digit, sum=0;

    cout << "Enter an integer number: ";
    cin >> num;

    while (num !=0)
    {
        digit = num % 10;
        sum = sum + digit;
        num = num / 10;
    }

    if (sum % 2 == 0)
    {
        if (sum % 4 == 0 && sum % 5 == 0)
        {
            cout << sum << " is an even number & multiples of 4 and 5";
        }
        else if (sum % 4 == 0) 
        { 
            cout << sum << " is an even number & multiples of 4";
        }
        else if (sum % 5 == 0) 
        {
            cout << sum << " is an even number & multiples of 5";
        }
        else
        {
            cout << sum << " is an even number";  
        }
    }
    else
    {
        if (sum % 4 == 0 && sum % 5 == 0)
        {
            cout << sum << " is an odd number & multiples of 4 and 5";
        }
        else if (sum % 4 == 0) 
        {
            cout << sum << " is an odd number & multiples of 4";
        }
        else if (sum % 5 == 0) 
        {
            cout << sum << " is an odd number & multiples of 5";
        }
        else
        {
            cout << sum << " is an odd number";  
        }
    }

    return 0;
}
